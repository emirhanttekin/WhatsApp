<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="start"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imgProfileReceived"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_profile_placeholder"
        android:scaleType="centerCrop"
        android:background="@drawable/profile_circle"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:id="@+id/messageBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_received"
        android:backgroundTint="@android:color/holo_blue_light"
        android:padding="10dp"
        android:orientation="vertical"
        android:minWidth="50dp"
        android:maxWidth="250dp">

        <!-- Gönderen adı -->
        <TextView
            android:id="@+id/tvSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gönderen Adı"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="4dp" />

        <!-- ✨ Sadece biri görünür olacak: Ses / Görsel / Mesaj -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- RESİM MESAJ -->
            <ImageView
                android:id="@+id/imgMessageReceived"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <!-- SESLİ MESAJ -->
            <LinearLayout
                android:id="@+id/voiceMessageLayoutReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/btnPlayPauseReceived"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_play"
                    android:layout_marginEnd="8dp" />

                <com.masoudss.lib.WaveformSeekBar
                    android:id="@+id/waveformReceived"
                    android:layout_width="100dp"
                    android:layout_height="24dp" />

                <TextView
                    android:id="@+id/tvDurationReceived"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- METİN MESAJ -->
            <TextView
                android:id="@+id/tvMessageReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mesaj içeriği"
                android:textSize="16sp"
                android:fontFamily="@font/myfont"
                android:textColor="@android:color/black"
                android:layout_marginEnd="4dp"
                android:maxWidth="250dp"
                android:visibility="gone" />

            <!-- DOSYA MESAJ -->
            <LinearLayout
                android:id="@+id/fileMessageLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_marginTop="4dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgFileIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_file"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dosya.pdf"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tvFileInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PDF • 230 KB"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- Saat -->
        <TextView
            android:id="@+id/tvMessageTimeReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:46"
            android:textSize="12sp"
            android:fontFamily="@font/myfont"
            android:textColor="@android:color/darker_gray"
            android:gravity="bottom"
            android:layout_marginTop="6dp" />
    </LinearLayout>


</LinearLayout>
