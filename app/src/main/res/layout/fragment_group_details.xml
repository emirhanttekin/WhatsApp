<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/semi_transparent_gray"
    android:layout_height="match_parent">

    <!-- Grup Profil Fotoğrafı -->
    <ImageView
        android:id="@+id/imgGroupPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_group_placeholder"
        android:background="@drawable/oval_background"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Grup Başlığı -->
    <TextView
        android:id="@+id/tvGroupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grup Adı"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:fontFamily="@font/myfont"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/imgGroupPhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Üye Ekle Butonu -->
    <Button
        android:id="@+id/btnInviteMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Üye Ekle"
        app:layout_constraintTop_toBottomOf="@id/tvGroupName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- Üye Listesi -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGroupMembers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnInviteMember"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
