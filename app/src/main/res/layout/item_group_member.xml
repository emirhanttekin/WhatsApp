<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/semi_transparent_gray"
        android:padding="12dp">

        <!-- Profil Resmi -->
        <ImageView
            android:id="@+id/ivMemberImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_placeholder"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <!-- Kullanıcı Bilgileri -->
        <LinearLayout
            android:id="@+id/userInfoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivMemberImage"
            android:layout_alignTop="@id/ivMemberImage"
            android:layout_alignBottom="@id/ivMemberImage"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/tvMemberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Üye Adı"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/myfont"/>

            <TextView
                android:id="@+id/tvMemberRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Üye Rolü"
                android:textSize="14sp"
                android:textColor="@color/darker_gray"
                android:fontFamily="@font/myfont"/>
        </LinearLayout>

        <!-- Online/Offline Yuvarlak -->
        <View
            android:id="@+id/viewOnlineStatus"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignTop="@id/tvMemberRole"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_online_dot"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
