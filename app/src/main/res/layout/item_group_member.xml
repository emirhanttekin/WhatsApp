<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:background="@android:color/transparent"> <!-- Arka plan şeffaf yapıldı -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@color/semi_transparent_gray"> <!-- Hafif transparan arka plan -->

        <!-- Profil Resmi -->
        <ImageView
            android:id="@+id/ivMemberImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_placeholder"/>

        <!-- Kullanıcı Bilgileri -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/tvMemberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Üye Adı"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/myfont"/>

            <TextView
                android:id="@+id/tvMemberRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Üye Rolü"
                android:textSize="14sp"
                android:textColor="@color/darker_gray"
                android:fontFamily="@font/myfont"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
