<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chat.ChatFragment">

    <!-- ðŸ”¹ Grup AdÄ± ve Davet Butonu -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvGroupName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Grup AdÄ±"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnInvite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Gruba KullanÄ±cÄ± Davet Et"
            android:src="@drawable/ic_invite" />
    </LinearLayout>

    <!-- ðŸ”¥ RecyclerView: MesajlarÄ± listelemek iÃ§in -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/chatInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <!-- ðŸ”¥ Alt kÄ±sÄ±m: Mesaj giriÅŸ kutusu -->
    <LinearLayout
        android:id="@+id/chatInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- ðŸ”¹ Mesaj giriÅŸ kutusu -->
        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="MesajÄ±nÄ±zÄ± yazÄ±n..."
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- ðŸ”¹ GÃ¶nder butonu -->
        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_send"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Mesaj GÃ¶nder" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
