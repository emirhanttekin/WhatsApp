<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="end"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_sent"
        android:padding="10dp"
        android:orientation="vertical"
        android:minWidth="50dp"
        android:maxWidth="250dp">

        <!-- ðŸ“Œ Ä°Ã§erikler aynÄ± alanda, sadece biri gÃ¶rÃ¼nÃ¼r olacak -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- TEXT MESAJ -->
            <TextView
                android:id="@+id/tvMessageSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mesaj iÃ§eriÄŸi"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/myfont"
                android:layout_marginEnd="4dp"
                android:maxWidth="250dp"
                android:visibility="gone" />

            <!-- RESÄ°M MESAJ -->
            <ImageView
                android:id="@+id/imgMessageSent"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:visibility="gone"/>

            <!-- SESLÄ° MESAJ -->
            <LinearLayout
                android:id="@+id/voiceMessageLayoutSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/btnPlayPauseSent"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_play"
                    android:layout_marginEnd="8dp"/>

                <com.masoudss.lib.WaveformSeekBar
                    android:id="@+id/waveformSent"
                    android:layout_width="100dp"
                    android:layout_height="24dp" />

                <TextView
                    android:id="@+id/tvDurationSent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- DOSYA MESAJ -->
            <LinearLayout
                android:id="@+id/fileMessageLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"

                android:layout_marginTop="4dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgFileIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_file"

                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dosya.pdf"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tvFileInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PDF â€¢ 230 KB"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- SAAT -->
        <TextView
            android:id="@+id/tvMessageTimeSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:45"
            android:fontFamily="@font/myfont"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="6dp"
            android:layout_gravity="end"/>
    </LinearLayout>




    <!-- PROFÄ°L -->
    <ImageView
        android:id="@+id/imgProfileSent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_profile_placeholder"
        android:scaleType="centerCrop"
        android:background="@drawable/profile_circle"
        android:layout_marginStart="8dp" />
</LinearLayout>
