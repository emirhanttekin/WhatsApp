<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.whatsapp.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_verifyOTPFragment"
            app:destination="@id/verifyOTPFragment2" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_selectCompanyFragment"
            app:destination="@id/selectCompanyFragment" />
    </fragment>
    <fragment
        android:id="@+id/verifyOTPFragment2"
        android:name="com.example.whatsapp.ui.auth.VerifyOTPFragment"
        android:label="fragment_verify_o_t_p"
        tools:layout="@layout/fragment_verify_o_t_p" >
        <action
            android:id="@+id/action_verifyOTPFragment2_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.whatsapp.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.whatsapp.ui.auth.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectCompanyFragment"
        android:name="com.example.whatsapp.ui.company.SelectCompanyFragment"
        android:label="fragment_select_company"
        tools:layout="@layout/fragment_select_company" >
        <action
            android:id="@+id/action_selectCompanyFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_selectCompanyFragment_to_createCompanyFragment"
            app:destination="@id/createCompanyFragment" />
    </fragment>
    <fragment
        android:id="@+id/createCompanyFragment"
        android:name="com.example.whatsapp.ui.company.CreateCompanyFragment"
        android:label="fragment_create_company"
        tools:layout="@layout/fragment_create_company" />

</navigation>
